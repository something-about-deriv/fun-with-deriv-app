{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["ES2021.String", "dom"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "ignoreDeprecations": "5.0",
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "paths": {
      "@deriv/account": ["libs/account/src/index.ts"],
      "@deriv/api": ["libs/api/src/index.ts"],
      "@deriv/appstore": ["libs/appstore/src/index.ts"],
      "@deriv/bot-skeleton": ["libs/bot-skeleton/src/index.ts"],
      "@deriv/bot-web-ui": ["libs/bot-web-ui/src/index.ts"],
      "@deriv/cashier": ["libs/cashier/src/index.ts"],
      "@deriv/cfd": ["libs/cfd/src/index.ts"],
      "@deriv/components": ["libs/components/src/index.ts"],
      "@deriv/hooks": ["libs/hooks/src/index.ts"],
      "@deriv/indicators": ["libs/indicators/src/index.ts"],
      "@deriv/p2p": ["libs/p2p/src/index.ts"],
      "@deriv/reports": ["libs/reports/src/index.ts"],
      "@deriv/shared": ["libs/shared/src/index.ts"],
      "@deriv/stores": ["libs/stores/src/index.ts"],
      "@deriv/trader": ["libs/trader/src/index.ts"],
      "@deriv/translations": ["libs/translations/src/index.ts"],
      "@deriv/utils": ["libs/utils/src/index.ts"],
      "@deriv/wallets": ["libs/wallets/src/index.ts"]
    }
  },
  "files": ["./types/global.d.ts", "./types/utils.d.ts", "./types/svg.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
